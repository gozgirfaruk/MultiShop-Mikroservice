@model List<BasketItemDto>
<div class="col-lg-8 table-responsive mb-5">
    <table class="table table-light table-borderless table-hover text-center mb-0">
        <thead class="thead-dark">
            <tr>
                <th>Ürün</th>
                <th>Fiyat</th>
                <th>Adet</th>
                <th>Sepet</th>
                <th>Sil</th>
            </tr>
        </thead>
        <tbody class="align-middle">
            @foreach(var item in Model)
            {
                 <tr>
                <td class="align-middle"><img src="@item.ProductImageUrl" alt="" style="width: 50px;"> @item.ProductName</td>
                <td class="align-middle">@item.Price.ToString("N2")₺</td>
                <td class="align-middle">
                    <div class="input-group quantity mx-auto" style="width: 100px;">
                        <div class="input-group-btn">
                            <button class="btn btn-sm btn-primary btn-minus">
                                <i class="fa fa-minus"></i>
                            </button>
                        </div>
                        <input type="text" class="form-control form-control-sm bg-secondary border-0 text-center" value="1">
                        <div class="input-group-btn">
                            <button class="btn btn-sm btn-primary btn-plus">
                                <i class="fa fa-plus"></i>
                            </button>
                        </div>
                    </div>
                </td>
                    @{
                        var result = item.Price * item.Quantity;
                    }
                <td class="align-middle">@result.ToString("N2")₺</td>
                    <td class="align-middle"><a href="/Basket/RemoveBasketItem/@item.ProductID" class="btn btn-sm btn-danger"><i class="fa fa-times"></i></a></td>
            </tr>
            }
           
        </tbody>
    </table>
</div>
